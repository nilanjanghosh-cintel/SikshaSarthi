                <h3>Data Science</h3>
                <div class="progress-bar">
                    <div class="progress-fill" id="data-science-progress" style="width: 0%;">0%</div>
                </div>
            </div>

            <div class="progress-item">
                <h3>AI and ML</h3>
                <div class="progress-bar">
                    <div class="progress-fill" id="ai-progress" style="width: 0%;">0%</div>
                </div>
            </div>
        </div>
    </div>
  </div>

